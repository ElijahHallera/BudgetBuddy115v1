<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg_app_gradient">



    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="372dp"
        android:layout_height="374dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />

    <TextView
        android:id="@+id/budgetName"
        android:layout_width="132dp"
        android:layout_height="47dp"
        android:layout_marginTop="400dp"
        android:text="  Group Budget"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Home"
        android:layout_width="133dp"
        android:layout_height="46dp"
        android:layout_marginStart="260dp"
        android:layout_marginLeft="260dp"
        android:layout_marginBottom="24dp"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/spentMoney"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:hint="Amount spent"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/deposit"
        app:layout_constraintEnd_toStartOf="@+id/emails"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/deposit"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_marginBottom="111dp"
        android:ems="10"
        android:hint="Amount deposited"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addBudy"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/update"
        android:layout_width="133dp"
        android:layout_height="46dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="24dp"
        android:text="Update chart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/emails"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginTop="511dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:hint="Buddy Email"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/addBudy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spentMoney"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addBudy"
        android:layout_width="133dp"
        android:layout_height="46dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="106dp"
        android:text="Add Buddy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/deposit"
        app:layout_constraintTop_toBottomOf="@+id/emails" />

</androidx.constraintlayout.widget.ConstraintLayout>